{
  "name": "Specie",
  "plural": "Species",
  "base": "PersistedModel",
  "idInjection": true,
  "scopes": {
    "smartPurpleSpecies": {
      "where": {
        "colors": {
          "like": "%purple%"
        }
      },
      "include": "priceHistories"
    }
  },
  "options": {
    "validateUpsert": true
  },
  "include": {
    "relation": "priceHistories"
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true
    },
    "slug": {
      "type": "string",
      "required": false
    },
    "latinName": {
      "type": "string",
      "required": false
    },
    "commonName": {
      "type": "string",
      "required": true
    },
    "isForIndoor": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "isExotic": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "isEvergreen": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "colors": {
      "type": [
        "string"
      ],
      "default": [
        "yellow",
        "blue",
        "pink"
      ]
    }
  },
  "validations": [],
  "relations": {
    "priceHistories": {
      "type": "hasMany",
      "model": "PriceHistory",
      "foreignKey": "specie_id"
    },
    "supplier": {
      "type": "belongsTo",
      "model": "Supplier",
      "foreignKey": "supplier_id"
    },
    "clients": {
      "type": "hasMany",
      "model": "Client",
      "foreignKey": "spice_id",
      "through": "Purchase"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "warehouse worker",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "cashier",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "cashier",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "manager",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "manager",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "manager",
      "permission": "ALLOW",
      "property": "coloredWith"
    },
    {
      "principalType": "ROLE",
      "principalId": "manager",
      "permission": "ALLOW",
      "property": "purpleSpeciesPriceHistories"
    },
    {
      "principalType": "ROLE",
      "principalId": "manager",
      "permission": "ALLOW",
      "property": "allColors"
    },
    {
      "principalType": "ROLE",
      "principalId": "manager",
      "permission": "ALLOW",
      "property": "image"
    }
  ],
  "methods": {}
}
